---
export type Props = {
  title: string;
  link: string;
  description?: string;
  imgSrc?: string;
  tags?: string[];
};

const { title, link, description, imgSrc, tags } = Astro.props;
---

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row">
    <img src={imgSrc} class="max-w-sm rounded-lg shadow-2xl w-full h-auto" />
    <div>
      <h1 class="text-5xl font-bold">{title}</h1>
      <p class="py-6">
        {description}
      </p>
      <div>
        <a href={link} target="_blank" rel="noopener noreferrer">
          <button class="btn btn-primary">Go to Repo</button>
        </a>
      </div>
      <div class="py-6">
        {tags?.map((tag) => <div class="badge badge-secondary mr-4">{tag}</div>)}
      </div>
    </div>
  </div>
</div>
